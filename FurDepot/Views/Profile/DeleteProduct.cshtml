@model  FurDepot.Models.Product
@{
	ViewBag.Title = String.Concat("Delete", Model.ProductName, "?");
	Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.Title?</h2>
@Html.Partial("UserTabMenu")
<p>Are you sure you want to delete this product?</p>

@using (Html.BeginForm("DeleteProduct")) {
	<!-- Added image to the DeleteEvent-->
	<div id="">
		@if (Model.ProductImage != null) {
			if (Model.ProductImage.ImageID > 0) {
				<div class="user-profile-image-container">
					<img class="user-profile-thumbnail" src="@string.Concat("data:Image/",
							Model.ProductImage.FileExtension, ";base64,",
							Model.ProductImage.BytesBase64)" />
				</div>
			}
		}
	</div>


	<div class="">
		<div id="">
			<div><b>Product Name</b>: @Model.ProductName</div>
		</div>
	</div>

	<div class="">
		<div id="">
			<div><b>Sold Date</b>: @Model.DateSold.ToShortDateString()</div>
		</div>
	</div>

	<div class="">
		<div id="">
			<div><b>Posted Date</b>: @Model.DatePost.ToShortDateString()</div>
		</div>
	</div>



	<div class="">
		<div id="">
			<div><b>Product Cost</b>: @Model.ProductCost</div>
		</div>
	</div>

	<div class="">
		<div id="">
			<div class="bold">Product Description</div>
			<div>@Model.ProductDesc</div>
		</div>
	</div>


	<div class="">
		<button class="button-alert" id="btnDelete" name="btnSubmit" value="delete"><i class='far fa-trash-alt'></i> Delete</button>
		<button class="button-cancel" id="btnClose" name="btnSubmit" value="close"><i class='fa fa-times'></i> Cancel</button>
	</div>
}
<script>
	$(document).ready(function () {
		SetActiveMenus('profile', 'Product');
	});
</script>
